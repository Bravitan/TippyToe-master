@model IEnumerable<TippyToe.Models.Shoes>

@{
    ViewData["Title"] = "Women";
}


@section Styles{
    <link rel="stylesheet" href="~/css/index.css" />

}


<body>


    <div class="container">
        <div class="row">
            </br>
            <div class="col-sm-2">
                <img alt="" class="i-amphtml-fill-content i-amphtml-replaced-content" decoding="async" src="https://tpc.googlesyndication.com/simgad/13371837437458717208?sqp=4sqPyQQ7QjkqNxABHQAAtEIgASgBMAk4A0DwkwlYAWBfcAKAAQGIAQGdAQAAgD-oAQGwAYCt4gS4AV_FAS2ynT4&amp;rs=AOga4qlItT5UYapE2_NA5TXfOUQQgYd6Yw">
            </div>
            <div class="col-sm-10">
                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-sm-3" class="columns" padding-top='300dp'>
                            <ul class="price" >
                                <li class="header"  style="background:#e28ede"> @item.Style </li>
                                <li class="grey"  style="background:#eda0e9"> @item.Price ₪ </li>
                                <img src="@item.Image" style="width: 300px; height: 200px" />
                                <li class="grey" style="background:#eda0e9"><a href="#" class="button">Add</a></li>
                            </ul>

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                            @Html.ActionLink("Details", "Details", new { id = item.Id })

                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</body>