@model IEnumerable<TippyToe.Models.Shoes>

@{
    ViewData["Title"] = "Women";
}


@section Styles{
    <link rel="stylesheet" href="~/css/index.css" />

}


<body>


    <div class="container">
        <div class="row">
            </br>
            <div class="col-sm-2">

            </div>

            <div class="col-sm-10">

                <div class="row">

                    @foreach (var item in Model)
                    {
                        <div class="col-sm-3" class="columns" padding-top='300dp'>
                            <ul class="price">
                                <li class="header">    @item.Style  </li>
                                <li class="grey">   @item.Price ₪   </li>
                                <img src="@item.Image" style="width: 300px; height: 200px" />
                                <li class="grey"><a href="#" class="button">Add</a></li>
                            </ul>

                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })|
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })|
                            @Html.ActionLink("Details", "Details", new { id = item.Id })

                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</body>